@model IEnumerable<DevOPS_Project.Models.Building>

@{
    ViewData["Title"] = "Buildings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @if (TempData["success"] != null) { 
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["success"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="row">
        <div class="col-sm-6">
            <h3>Buildings List</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="Create" asp-controller="Buildings">Add building</a>
        </div>
    </div>

    <div class="row">
        @if(Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor(m => m.BuildingID) 
                        </td>
                        <td>@Html.DisplayNameFor(m => m.BuildingName) 
                        </td>
                        <td>@Html.DisplayNameFor(m => m.SyscreatedDt) 
                        </td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var col in Model)
                    {
                    <tr>
                        <td>@col.BuildingID
                        </td>
                        <td>@col.BuildingName
                        </td>
                        <td>@col.SyscreatedDt
                        </td>
                        <td>
                            <a asp-controller="Buildings" asp-action="Edit" asp-route-id="@col.BuildingID" class="btn btn-warning">Update</a>
                            <a asp-controller="Buildings" asp-action="Delete" asp-route-id="@col.BuildingID" class="btn btn-danger">Delete</a>
                            <a asp-controller="Rooms" asp-action="Index" asp-route-id="@col.BuildingID" class="btn btn-info">Rooms</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <h2>The building table is empty</h2>
        }
    </div>
</div>
 