@model DevOPS_Project.Models.Reservation
@using DevOPS_Project.Helper;
@{
    ViewBag.Title = "Data";
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <h3>Reservation on @ViewBag.Name</h3>
    </div>

</div>

<div class="row">
    @if (Model.UserID.ToString() != SessionHelper.GetNameIdentifier(User))
    {
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        You can't edit this reservation
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    }
    <div class="col-sm-10">
        <form method="post" asp-action="EditReserv">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="RoomID" />
            <input type="hidden" asp-for="ReservID" />
            <input type="hidden" asp-for="UserID" />
            <input type="hidden" asp-for="SyscreatedDt" />

            <div class="form-row">
                <div class="form-group col-sm-4">
                    <label asp-for="ReservDT" class="control-label"></label>
                    <input type="date" asp-for="ReservDT" class="form-control" />
                    <span asp-validation-for="ReservDT" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-4">
                    <label asp-for="ReservStartTime" class="control-label"></label>
                    <input type="time" asp-for="ReservStartTime" class="form-control" />
                    <span asp-validation-for="ReservStartTime" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-4">
                    <label asp-for="ReservEndTime" class="control-label"></label>
                    <input type="time" asp-for="ReservEndTime" class="form-control" />
                    <span asp-validation-for="ReservEndTime" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                @if (Model.UserID.ToString() != SessionHelper.GetNameIdentifier(User))
                {
                    <input type="submit" value="Edit Reservation" class="btn btn-primary" disabled/>
                }
                else
                {
                    <input type="submit" value="Edit Reservation" class="btn btn-primary" />
                }
            </div>
        </form>
    </div>
</div>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}

